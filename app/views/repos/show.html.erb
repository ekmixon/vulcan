<p id="notice"><%= notice %></p>
<h4 class="m-t-0 header-title"><%= @repo.projects[0].name %> Repo Control</h4>
<div class="row no-gutters">
    <div class="col-lg-12">
        <div class="card-box">
          <div class="row">
              <div class="col-lg-6">
                  <div class="portlet">
                      <div class="portlet-heading portlet-default">
                          <h3 class="portlet-title text-dark">
                              Commits / Revert to a commit
                          </h3>
                          <div class="clearfix"></div>
                      </div>
                      <div id="bg-default" class="panel-collapse collapse show">
                          <div class="portlet-body">
                            <table>
                              <thead>
                                <tr>
                                  <th>Message</th>
                                  <th>Commit SHA</th>
                                  <th></th>
                                </tr>
                              </thead>

                              <tbody>
                                <% @commits.each do |commit| %>
                                  <tr>
                                    <td><%= commit[0] %></td>
                                    <td><%= commit[1] %></td>
                                    <td><%= link_to 'Revert To This Commit', revert_to_commit_path(commit[0]), class: 'btn btn-default' %></td>
                                  </tr>
                                <% end %>
                              </tbody>
                            </table>
                          </div>
                      </div>
                  </div>
              </div>
              
              <div class="col-lg-6">
                  <div class="portlet">
                      <div class="portlet-heading portlet-default">
                          <h3 class="portlet-title text-dark">
                              Commit / Pull From Master
                          </h3>
                          <div class="clearfix"></div>
                      </div>
                      <div id="bg-default" class="panel-collapse collapse show">
                          <div class="portlet-body">
                            <%= form_tag(commit_url(@repo), method: :put, id: 'commit', remote: true) do %>
                              <div class='row'>
                                <div class="col-lg-9">
                                    <label class="control-label">Commit Message</label>
                                    <%= text_field_tag :commit_message,nil, class: "form-control" %>
                                </div>
                                <div class="col-lg-3 text-center text-right">
                                  <label class="control-label">Commit</label>
                                  <%= submit_tag 'Commit', class: 'btn btn-success' %>
                                </div>
                              </div>
                            <% end %>
                            <!-- <div class='row'>
                              <div class="col-lg-3 text-center text-right">
                                <%= form_tag(create_pull_request_url(@repo), method: :put, id: 'create-pull-request', remote: true) do %>
                                  <%= submit_tag 'Create Pull Request', class: 'btn btn-success' %>
                                <% end %>
                              </div>
                            </div> -->
                          </div>
                      </div>
                  </div>
              </div>
        </div>
    </div>
  </div>
</div>
